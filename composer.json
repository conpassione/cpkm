{
	"name": "conpassione/cpkm",
	"type": "typo3-cms-extension",
	"description": "TYPO3 Extension cpkm von conPassione gmbh",
	"keywords": [
		"TYPO3",
		"TYPO3 Extension",
		"typo3-cms-extension",
		"cpkm"
	],
	"homepage": "https://www.conpassione.ch/",
	"authors": [
		{
			"name": "Renzo Bauen, conPassione gmbh",
			"email": "info@conpassione.ch"
		}
	],
	"license": "GPL-2.0-or-later",
	"minimum-stability": "dev",
	"prefer-stable" : true,
	"version": "1.0.0",
	"require": {
		"conpassione/cpdevsite": "^1.0",
		"typo3/cms-core": "^13"
	},
	"require-dev": {
		"typo3/testing-framework": "*",
		"helhum/dotenv-connector": "*",
		"typo3/cms-adminpanel": "^13",
		"typo3/cms-backend": "^13",
		"typo3/cms-belog": "^13",
		"typo3/cms-beuser": "^13",
		"typo3/cms-dashboard": "^13",
		"typo3/cms-extbase": "^13",
		"typo3/cms-extensionmanager": "^13",
		"typo3/cms-felogin": "^13",
		"typo3/cms-filelist": "^13",
		"typo3/cms-filemetadata": "^13",
		"typo3/cms-fluid": "^13",
		"typo3/cms-fluid-styled-content": "^13",
		"typo3/cms-form": "^13",
		"typo3/cms-frontend": "^13",
		"typo3/cms-impexp": "^13",
		"typo3/cms-info": "^13",
		"typo3/cms-install": "^13",
		"typo3/cms-linkvalidator": "^13",
		"typo3/cms-lowlevel": "^13",
		"typo3/cms-opendocs": "^13",
		"typo3/cms-reactions": "^13",
		"typo3/cms-recycler": "^13",
		"typo3/cms-redirects": "^13",
		"typo3/cms-reports": "^13",
		"typo3/cms-rte-ckeditor": "^13",
		"typo3/cms-scheduler": "^13",
		"typo3/cms-seo": "^13",
		"typo3/cms-setup": "^13",
		"typo3/cms-sys-note": "^13",
		"typo3/cms-t3editor": "^13",
		"typo3/cms-tstemplate": "^13",
		"typo3/cms-viewpage": "^13",
		"typo3/cms-webhooks": "^13",
		"typo3/minimal": "^13"
	},
	"autoload": {
		"psr-4": {
			"Conpassione\\cpkm\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Conpassione\\cpkm\\Tests\\": "Tests"
		}
	},
	"config": {
		"vendor-dir": ".build/vendor",
		"bin-dir": ".build/bin",
		"sort-packages": true,
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true,
			"helhum/dotenv-connector": true
		}
	},
	"repositories": [
		{
			"type": "path",
			"url": "packages/*",
			"options": {
				"symlink": true
			}
		}
	],
	"extra": {
		"typo3/cms": {
			"extension-key": "cpkm",
			"web-dir": ".build/public"
		}
	}
}
